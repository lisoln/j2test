#rightSidebar {
	float: right;
margin-top: 0.5em;
	width: 145px;
	padding: 0.5em 0.5em 0.5em 0em;
	font-size: 0.7em;
	height: 100%;
	display: block;
	overflow: hidden;
	min-width: 145px;
	border-bottom-style:solid;
	border-left-style:solid;
	border-width:0px;
	border-color:#ABA;
}
#main {
	
	float: center;
	width: 645px;
	background: #ffffff;
	margin-top: 0px;
padding: 0.5em 1em 1em 1em;

}

// Set main on non-IE browsers to have a 10% margin
*html #main {
	margin-left: 2px;
} 