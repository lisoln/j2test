/**
 * Common HTML elements
 */

#headerTitle {
	width: 100%;
}

#body {
	vertical-align: top;
	height: 100%;
	width: 1000px;
	overflow: hidden;
	float: center;
	position:center;
	margin-left:auto;
	margin-right:auto;

}

#leftSidebar {
	float: left;
	width: 145px;
	padding: 0.5em 0em 0.5em 0.2em;
	font-size: 0.7em;
	display: block;
	overflow: hidden;
margin-left: 0.2em;
}
#main {
			
	float: center;
	width: 645px;
	border-right-style:solid;
	border-left-style:solid;
	border-bottom-style:solid;
	border-width: 1px;
	border-color: #a9b4ca;
	padding: 0.5em 1em 1em 1em;
text-align:center;


}

// Set main on non-IE browsers to have a 10% margin
*html #main {
	margin-left: 2px;
} 
